        <div class="col-lg-3"> <a href="{{ path('tags.remove',{id:tag.id}) }}" class="btn btn-outline-danger btn-sm">del</a>
        </div>


   </div>

    {% endfor %}
        </div>
    </div>
{% endblock %}

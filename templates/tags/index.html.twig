{% extends 'base.html.twig' %}

{% block title %}Hello TagsController!{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center"><b>Tags</b></h2>
        <div class="tags">
       <div class="head">
        <div class="row">

      <div class="col-lg-2"><b> ID</b></div>
              <div class="col-lg-3"> <b>Tags Name</b></div>
